#!/bin/rc
# do not edit. Edit /sys/src/cmd/mail2fs/Spam- instead.
#

TMP=/tmp/spam.$sysname.$pid
cd /mail/box/$user
{
	echo '# hash table'
	cat $file | upas/msgtok |
		grep -v '^....................(.*)	' |
		sed 's/$/	1/'
	} >$TMP.tok
upas/addhash -o _prof.mbox _prof.mbox 1 $TMP.tok 1
upas/addhash -o _prof.spam _prof.spam 1 $TMP.tok -1
rm -f $TMP.*
exit ''
